generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}


model User {
  id               Int            @default(autoincrement()) @id
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt()
  email            String         @unique
  hash             String
  firstName        String
  lastName         String
  bookmarks        Bookmark[]

  @@map("users")
}

model Bookmark {
  id               Int            @default(autoincrement()) @id
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt()
  title            String
  description      String
  link             String?
  userId           Int
  user             User    @relation(fields: [userId], references: [id])

  @@map("bookmarks")
}